<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AidenDesktop"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:icons="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia.FluentIcons"
             x:Class="AidenDesktop.App"
             RequestedThemeVariant="Light">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferUserAccentColor="True" CustomAccentColor="#C18E3A" />
        <StyleInclude Source="avares://AidenDesktop/Controls/RadialSlider.axaml"/>
        <StyleInclude Source="avares://AidenDesktop/Controls/SeriesBox.axaml" />
        <StyleInclude Source="avares://AidenDesktop/Controls/EZPie.axaml" />
        <StyleInclude Source="avares://AidenDesktop/Controls/EZGeo.axaml" />
        <Style>
            <Style.Resources>
                <ResourceInclude x:Key="IconGeometries" Source="avares://AidenDesktop/Assets/IconGeometries.axaml"/>
            </Style.Resources>
        </Style>
    </Application.Styles>
</Application>