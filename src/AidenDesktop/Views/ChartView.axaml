<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="650"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:vm="using:AidenDesktop.ViewModels"
             Design.DataContext="{Binding Source={x:Static vm:ChartViewModel.DesignVM}}"
			 x:DataType="vm:ChartViewModel"
             x:Class="AidenDesktop.Views.ChartView">
    <StackPanel HorizontalAlignment="Center" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <lvc:CartesianChart 
                Grid.Row="0" 
                Height="450"
                Width="1200"
                Series="{Binding Series}" 
                XAxes="{Binding XAxes}"
                EasingFunction="{Binding Source={x:Null}}">
            </lvc:CartesianChart>
        </Grid>
    </StackPanel>
</UserControl>